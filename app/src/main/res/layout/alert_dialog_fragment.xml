<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_xxlarge"
            android:paddingRight="@dimen/margin_xxlarge">



            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                android:gravity="center"
                android:textColor="@color/blue_line"
                android:textSize="@dimen/font_xxlarge"
                android:textStyle="bold"
                android:visibility="visible" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diagram"
                android:contentDescription="@string/app_name" />
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:gravity="center"
                android:textColor="@color/blue_line"
                android:textSize="@dimen/font_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dialog_button_height"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_bg_green"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_normal" />

                <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="5dp"-->
                <!--android:layout_weight="0.1" />-->

                <!--<Button-->
                <!--android:id="@+id/tvOk"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="@dimen/dialog_button_height"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/round_corner_bg_purple"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/yes"-->
                <!--android:textColor="@color/color_white"-->
                <!--android:textSize="@dimen/font_normal"-->
                <!--/>-->


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>