<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clusterName"
                style="@style/LargeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/font_xxxxxlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClusterCount"
                style="@style/LargeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@color/menu_color_black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView

                            style="@style/NormalTextView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/no_of_children_less_than_2_year" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etNoOfChildrens"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/_06_to_23_months"
                                android:inputType="text"
                                android:maxLength="15" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/NormalTextView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/age_matched_vaccinated_children" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAgeMatchedVaccinatedChildren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:maxLength="15" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/NormalTextView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/partially_vaccinated_children" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPartiallyVaccinatedChildren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="15" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/NormalTextView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/un_vaccinated_children" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etUnVaccinatedChildren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="15" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clustLay"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="2dp"
                            android:nextFocusDown="@id/Lhv">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/areaname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Area Name"
                                android:imeOptions="actionNext"
                                android:maxLength="50"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/hrmpLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="vertical"
                            android:padding="2dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:padding="5dp"
                                android:text="Settlement"
                                android:textColor="@color/colorPD"
                                android:textStyle="bold" />

                            <com.hisdu.ses.utils.CustomSearchableSpinner
                                android:id="@+id/Settlement"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/background"
                                android:ems="10"
                                android:padding="0dp"
                                android:spinnerMode="dialog"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAddChild"
                        style="@style/ButtonStyle"
                        android:layout_width="@dimen/button_width_1"
                        android:layout_height="@dimen/margin_xxxxlarge1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_xsmall"
                        android:background="@drawable/round_corner_button_blue_1"
                        android:gravity="center"
                        android:text="@string/add_child"
                        android:textColor="@color/color_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSerial"
                            style="@style/NormalTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/sr_no" />

                        <TextView
                            android:id="@+id/tvChildName"
                            style="@style/NormalTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/child_name" />

                        <TextView
                            android:id="@+id/tvVaccinated"
                            style="@style/NormalTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/vaccinated" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAddChild"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_small" />

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/ButtonStyle"
                        android:layout_width="@dimen/button_width_1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_xsmall"
                        android:background="@drawable/round_corner_bg_green"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/color_white" />

                    <!--  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:orientation="horizontal">

                          <Button
                              android:id="@+id/btnSelectDay"
                              style="@style/ButtonStyle"
                              android:layout_width="@dimen/button_width_1"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:layout_margin="@dimen/margin_xsmall"
                              android:background="@drawable/round_corner_bg_green"
                              android:gravity="center"
                              android:text="@string/select_day"
                              android:textColor="@color/color_white" />

                          <Button
                              android:id="@+id/btnNext"
                              style="@style/ButtonStyle"
                              android:layout_width="@dimen/button_width_1"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:layout_margin="@dimen/margin_xsmall"
                              android:background="@drawable/round_corner_bg_purple"
                              android:gravity="center"
                              android:text="@string/next"
                              android:textColor="@color/color_white" />
                      </LinearLayout>-->
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>


    </LinearLayout>

    <!--</android.support.v4.widget.NestedScrollView>-->
    <!--</LinearLayout>-->
</LinearLayout>